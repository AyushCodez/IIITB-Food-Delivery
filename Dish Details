/*
1 to Add dish
2 to Update dish price
3. to remove dish
*/

#include<stdio.h>
#include<string.h>
#include<stdlib.h>

struct Dishes
{
    char restaurantname[30];
    char nameofdish[30]; 
    char typeofdish[20]; //whether it is a softdrink / fastfood / beverage / bread / gravy ....
    char categoryofdish[20]; //whether it is veg/non-veg/jain
    float priceofdish;
};

int main(){
    struct Dishes d[100];
    int cadd=0;
    char input[10];
    scanf("%s",input);
    if (strcmp(input,"exit")==0){
        printf("EXIT");
    }
    else if (strcmp(input,1)==0){
        printf("Enter Restuarant name");
        scanf("%s",d[cadd].restaurantname);
        printf("Name of the dish");
        scanf("%s",d[cadd].nameofdish);
        printf("Type of the dish");
        scanf("%s",d[cadd].typeofdish);
        printf("Category of the dish");
        scanf("%s",d[cadd].categoryofdish);
        printf("Price of the dish");
        scanf("%f",d[cadd].priceofdish);
        cadd=cadd+1;
        scanf("%s",input);
    }
}
